{
    "name": "erkin/publications",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Publications\\": "src/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-curl": "*"
    },
    "scripts": {
        "create-db": "sudo -u postgres psql -p 5433 -f schema.sql",
        "import-data": "php data_import.php",
        "dev-server": "php -S localhost:8080 -t ./webroot",
        "all": "sudo -u postgres psql -p 5433 -f schema.sql && php data_import.php && php -S localhost:8080 -t ./webroot"
    }
}
